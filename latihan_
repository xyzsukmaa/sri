
#include <iostream>
using namespace std;

int weirdMultiply(int a, int b){
    int hasil = a * b ;
    if(a < 0 || b < 0){
        return hasil * 2;
    }
    else if(a > 0 && b > 0){
        return hasil - 3;
    }
    return hasil; //untuk yang tidak sesuai format input
}

int main(){
    int a, b;
    cout << "Masukkan 2 bilangan bulat " << endl;
    cin >> a >> b;
    cout << weirdMultiply(a,b) << endl;
    return 0;
}
