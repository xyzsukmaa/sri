#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;

double pangkat(double r, double n, double t, double P) {
    double kurung = 1 + r /n;
    double hasil = 1;

    for(int i = 0; i < n * t; i++) {
        hasil = hasil * kurung;
    }

    double A = hasil * P;
    return A;

}

int main(){


    double P;
    double r;
    double n;
    double t;


    cin >> P;
    cin >> r;
    cin >> n;
    cin >> t;

    double A = pangkat(r, n, t, P);

    cout << (long long)round(A) << endl;

return 0;
}
